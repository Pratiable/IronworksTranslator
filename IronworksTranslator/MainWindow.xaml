<Window x:Class="IronworksTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IronworksTranslator"
        mc:Ignorable="d"
        Title="IronworksTranslator" Height="200" Width="400"
        MinHeight="200" MinWidth="400"
        PreviewLostKeyboardFocus="Window_PreviewLostKeyboardFocus">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                 Margin="8" TextWrapping="Wrap" Text="" 
                 x:Name="TranslatedChatBox" x:FieldModifier="public"
                 IsReadOnly="True"
                 />
        <!--<Button Content="Update" HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="15" Width="75"
                Name="UpdateChatButton" Click="UpdateChatButton_Click"/>-->
    </Grid>
</Window>
